---
import { useTranslations } from "src/i18n/utils";
import TailwindButton from "../react/ui/Button";
const t = useTranslations(Astro.url);
---

<div class="bg-black flex flex-col items-center h-full p-20">
  <div class="bg-black flex flex-col lg:flex-row items-center h-full p-20">
    <img src="images/searching.png" alt="" class="flex flex-grow" />

    <div class="flex flex-col gap-10">
      <h4 class="text-7xl self-center">{t("sections.filler.title")}</h4>
      <p>
        {t("sections.filler.text")}
      </p>
    </div>
  </div>
  <TailwindButton text={t("button.contact")} url="tetst" client:only="react" />
</div>
