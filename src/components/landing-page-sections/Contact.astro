---
import { useTranslations } from "src/i18n/utils";
import TailwindButton from "../react/ui/Button";
const t = useTranslations(Astro.url);
---

<section class="bg-black py-16">
  <div class="container mx-auto px-4">
    <div class="bg-yellow-500 rounded-lg py-12 px-6 md:px-12 text-center">
      <h2 class="text-2xl md:text-4xl font-bold text-black mb-4">
        {t("sections.discuss.title")}
      </h2>
      <p class="text-sm md:text-base text-black mb-8">
        {t("sections.discuss.text")}
      </p>
      <form class="flex justify-center items-center space-x-4">
        <input
          type="email"
          placeholder="Your email"
          class="px-4 py-3 w-full max-w-xs bg-white text-black rounded-full shadow-md focus:outline-none focus:ring-2 focus:ring-yellow-600"
        />
        <button
          type="submit"
          class="bg-black text-white py-3 px-6 rounded-full font-semibold shadow-md hover:bg-gray-800 transition duration-300"
        >
          {t("button.send")}
        </button>
      </form>
    </div>
  </div>
  <!-- Go to Top Button -->
  <div class="container mx-auto px-4 mt-8 text-right">
    <button
      class="bg-transparent border border-yellow-500 text-yellow-500 py-2 px-6 rounded-full text-sm hover:bg-yellow-500 hover:text-black transition duration-300"
    >
      {t("button.goTop")}
    </button>
  </div>
</section>
